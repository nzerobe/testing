<div class="users_h1_box"><h1>ブログ一覧</h1></div>
<p><%= notice %></p>
<table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>画像</th>
  </tr>
<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.user.name %></td>
    <td><%= picture.title %></td>
    <td><%= picture.content %></td>
    <td><%= picture.image %></td>
    <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
    <td><%= link_to "ブログを編集する", edit_picture_path(picture.id) %></td>
    <td><%= link_to 'ブログを削除する', picture_path(picture.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくブログを投稿する', new_picture_path %>
